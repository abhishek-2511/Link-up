<header id="layout-header">
    <nav>
        <div class="mini-logo">
            <p>
                <a href='/'>
                    Link-up
                </a>
            </p>
        </div>
    
        <div class="auth-links">
            <ul style="list-style: none">
                <% if (locals.user){ %>
                <li>
                    <a href="/users/profile/<%= user.id %>"><%= user.name %></a>
                </li>
                <li>
                    <a href="/users/sign-out">Sign Out</a>
                </li>
                <% }else{ %>
                <li>
                    <a href="/users/sign-in">Sign In</a>
                </li>
                <li>
                    <a href="/users/sign-up">Sign Up</a>
                </li>
        
                <% } %>
            </ul>
        </div>
    </nav>
 
</header>